<div class="right_side col-sm-6" id="category-<%= category.id %>" >
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title"><%= category.title %></h3>
        </div>
        <div class="panel-body">
            <%= category.description %>
            <%= category.words.pluck(:content).join(' ') if category.words.any? %>
        </div>
    </div>
    <div class="clearfix manage_btn">
        <%= link_to "Edit", edit_admin_category_path(category), class: 'btn btn-default edit_btn' %>
        <%= link_to "Delete", [:admin, category], method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger delete_btn' %>
        <%= link_to "Add Word", new_admin_category_word_path(category), class: 'btn btn-default add_btn' %>
        <%= link_to "Words List", admin_category_words_path(category), class: 'btn btn-primary list_btn' %>
    </div>
</div>
