<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section>
            <%= render 'follow_form' if logged_in? %>
        </section>
        <section>
            <%= render 'shared/stats' %>
        </section>
        <section>
            <%= render 'shared/words_learned' %>
        </section>
        
    </aside>
</div>