<% provide(:title, 'Lesson_word') %>
<div class="row">
    <div class="col-xs-4">
        <div class="course_title"><%= @lesson.category.title %></div>
    </div>
</div>

<div class="row">
    <div class="col-xs-4">
        <div class="lesson_word"><%= @lesson_word.word.content %></div>
    </div>
    <div class="col-xs-8">
        <div class="progress"><%= @lesson.lesson_words.index(@lesson_word)+1 %> of <%= @lesson.lesson_words.count %></div>
        <div class="word_answer_btn">
            <% @lesson_word.word.word_answers.each do |word_answer| %>
            <%= button_to word_answer.content, [@lesson, @lesson_word],
                                        params: {word_answer_id: word_answer.id},
                                        method: :patch,
                                        class: 'btn btn-primary btn-block btn_answer' %>
            <% end %>
        </div>
    </div>
</div>
        
