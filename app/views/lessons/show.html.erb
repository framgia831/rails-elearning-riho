<% provide(:title, 'Result') %>

<h1>Result page</h1>
<h2>course: <%= @category.title %></h2>

<table class="table table-bordered">
    <tr class="success">
        <th>
            Word
        </th>
        <th>
            Your Answer
        </th>
        <th>
            Correctness
        </th>
        <th>
            Correct Answer
        </th>

    </tr>
    
    <tbody>
        <% @lesson_words.each do |lesson_word| %>
            <tr>
                <td>
                    <%= lesson_word.word.content %>
                </td>
                <td>
                    <%= lesson_word.word_answer.content %>   
                </td>
                <% if lesson_word.word_answer.correct? %>
                    <td>
                        <span> ◎ </span>
                    </td>
                    <td>
                        <span> --- </span>
                    </td>
                <% else %>
                    <td>
                        <span> ×　</span>
                    </td>
                    <td>
                        <span><%= lesson_word.word.correct_answer %></span>
                    </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>